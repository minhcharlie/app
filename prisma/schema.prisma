generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  username     String?
  email        String           @unique
  passwordHash String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  analyses     PromptAnalysis[]
}

model PromptAnalysis {
  id              String   @id @default(cuid())
  promptText      String
  clarityScore    Int
  relevanceScore  Int
  coherenceScore  Int
  suggestions     Json
  rewrittenPrompt String
  createdAt       DateTime @default(now())
  userId          String
  comparisonId    String?
  customScores    Json?
  mode            String   @default("single")
  isPublic        Boolean  @default(false)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
